<resources>

    <style name="Theme.WatchInUkrainian" parent="@style/Theme.Leanback">
        <item name="android:colorPrimaryDark">@color/fastlane_background</item>
        <item name="playbackControlsTimeStyle">@style/PlaybackControlsTime</item>
        <item name="playbackProgressPrimaryColor">@color/color_accent</item>
        <item name="playbackControlsIconHighlightColor">@color/color_accent</item>
        <item name="detailsActionButtonStyle">@style/DetailsAction</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItem</item>
    </style>

    <style name="PlaybackControlsTime">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MySpinnerItem" parent="android:Widget.Spinner">
        <item name="android:color">@color/color_accent</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="DetailsAction" parent="TextAppearance.Leanback.DetailsActionButton">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.Leanback.DetailsActionButton</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawablePadding">@dimen/lb_action_icon_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingStart">@dimen/lb_action_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/lb_action_padding_horizontal</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textColor">@drawable/button_colors</item>
    </style>

</resources>